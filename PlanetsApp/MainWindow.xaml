<Window x:Class="PlanetsApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Планеты Солнечной системы" Height="400" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="PlanetsListBox" SelectionChanged="PlanetSelected">
            <ListBoxItem>Меркурий</ListBoxItem>
            <ListBoxItem>Венера</ListBoxItem>
            <ListBoxItem>Земля</ListBoxItem>
            <ListBoxItem>Марс</ListBoxItem>
            <ListBoxItem>Юпитер</ListBoxItem>
            <ListBoxItem>Сатурн</ListBoxItem>
            <ListBoxItem>Уран</ListBoxItem>
            <ListBoxItem>Нептун</ListBoxItem>
        </ListBox>

        <TextBox x:Name="PlanetInfoTextBox" Grid.Column="1" 
                 Margin="10" IsReadOnly="True" 
                 TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 FontSize="14"/>
    </Grid>
</Window>